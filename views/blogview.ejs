<%- include('includes/header.ejs') %>

  <!-- 
Install the "flowbite-typography" NPM package to apply styles and format the article content: 

URL: https://flowbite.com/docs/components/typography/ 
-->
  <style>
    p {
      font-size: 20px !important;
      text-align: justify !important;
      line-height: 2rem !important;
      margin-top: 10px !important;
      color: black;
    }

    h2,
    h3,
    h4,
    h5 {
      font-size: 30px !important;
    }
  </style>

  <main class="pt-8 pb-16 lg:pt-16 lg:pb-24 bg-white dark:bg-gray-900 antialiased">
    <div class="flex justify-between px-4 mx-auto max-w-screen-xl ">
      <article class="">
        <header class="mb-4 lg:mb-6 not-format">
          <address class="flex items-center mb-6 not-italic">
            <div class="inline-flex items-center mr-3 text-sm text-gray-900 dark:text-white">
              <img class="mr-4 w-16 h-16 rounded-full" src="../uploads/male.png" alt="Jese Leos">
              <div>
                <a href="#" rel="author" class="text-xl font-bold text-gray-900 dark:text-white"><%- blog.author %></a>
                <p class="text-base text-gray-500 dark:text-gray-400">Category</p>
                <p class="text-base text-gray-500 dark:text-gray-400"><time pubdate datetime="2022-02-08"
                    title="February 8th, 2022"><%- blog.createdAt %></time></p>
              </div>
            </div>
          </address>
          <h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white"><%-
              blog.title %></h1>
        </header>
        <figure>
          <img src="../uploads/<%- blog.imageUrl %>" alt="" width="100%">
          <!-- <figcaption><%- blog.title %></figcaption> -->
        </figure>
        <p>
          <%- blog.content %>
        </p>
      </article>
    </div>
  </main>





  <%- include('includes/footer.ejs') %>